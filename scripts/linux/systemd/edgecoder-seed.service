[Unit]
Description=EdgeCoder Seed Node (All-in-One)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=edgecoder
Group=edgecoder
WorkingDirectory=__REPO_ROOT__
EnvironmentFile=/etc/edgecoder/seed.env
ExecStart=__NODE_BIN__ __REPO_ROOT__/dist/index.js
Restart=always
RestartSec=5
KillSignal=SIGINT
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
