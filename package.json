{
  "name": "edgecoder",
  "version": "1.0.0",
  "description": "EdgeCoder on-device and swarm runtime scaffold",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:alt": "INFERENCE_PORT=4312 COORDINATOR_PORT=4311 CONTROL_PLANE_PORT=4313 INFERENCE_URL=http://127.0.0.1:4312 COORDINATOR_URL=http://127.0.0.1:4311 tsx src/index.ts",
    "dev:coordinator": "tsx src/swarm/coordinator.ts",
    "dev:inference": "tsx src/inference/service.ts",
    "dev:control": "tsx src/control-plane/server.ts",
    "dev:portal": "tsx src/portal/server.ts",
    "dev:ide": "tsx src/apps/ide/provider-server.ts",
    "dev:worker": "tsx src/swarm/worker-runner.ts",
    "dev:worker:ios": "tsx src/swarm/ios-agent.ts",
    "dev:cloudreview": "tsx src/handshake/mock-server.ts",
    "bootstrap:coordinator": "tsx src/bootstrap/coordinator.ts",
    "verify:blacklist-audit": "tsx src/bootstrap/verify-blacklist-audit.ts",
    "build": "tsc -p tsconfig.json",
    "build:macos-installer": "bash scripts/macos/build-installer.sh",
    "install:macos-local": "bash scripts/macos/install-local.sh",
    "build:linux-deb": "bash scripts/linux/build-deb.sh",
    "build:windows-msi": "bash scripts/windows/build-msi.sh",
    "build:ble-proxy": "bash scripts/macos/build-ble-proxy.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs:dev": "vitepress dev site-docs",
    "docs:build": "vitepress build site-docs",
    "docs:preview": "vitepress preview site-docs",
    "model:list": "tsx bin/swap-model.ts list",
    "model:swap": "tsx bin/swap-model.ts swap",
    "model:status": "tsx bin/swap-model.ts status",
    "model:pull": "tsx bin/swap-model.ts pull"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@abandonware/bleno": "^0.6.2",
    "@abandonware/noble": "^1.9.2-26",
    "@fastify/websocket": "^11.2.0",
    "@simplewebauthn/server": "^13.2.2",
    "acorn": "^8.16.0",
    "better-sqlite3": "^12.6.2",
    "bip39": "^3.1.0",
    "fastify": "^5.7.4",
    "pg": "^8.18.0",
    "undici": "^7.22.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@types/web-bluetooth": "^0.0.21",
    "@types/ws": "^8.18.1",
    "mermaid": "^11.12.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitest": "^4.0.18"
  }
}
