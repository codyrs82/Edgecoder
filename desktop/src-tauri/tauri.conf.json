{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "EdgeCoder",
  "version": "1.2.1",
  "identifier": "io.edgecoder.desktop",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run bundle-agent && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "EdgeCoder",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:1420 blob:; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* https://edgecoder-portal.fly.dev https://edgecoder-seed.fly.dev https://accounts.google.com https://login.microsoftonline.com https://graph.microsoft.com https://oauth2.googleapis.com; style-src 'self' 'unsafe-inline'; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "dmg",
      "appimage",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/agent": "agent"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["edgecoder"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE4Mjc5RTJFMEJGNUVFQTIKUldTaTd2VUxMcDRuR0poY1A5WVlkMmtpMnh4eUVya1lqeUE1TmtHTXlZNUZGWWdSVE5NUVNXS2IK",
      "endpoints": [
        "https://github.com/codyrs82/Edgecoder/releases/latest/download/latest.json"
      ]
    }
  }
}
